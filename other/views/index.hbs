        <img
          class='lazy gsap zoom w-full min-h-[500px] h-[40vw] object-cover object-left absolute top-0 left-0 -z-10 entered loaded'
          src='/images/home/banner.jpg' />
      </div>
    </section>

    <!-- about  -->
    <section class="bg-[url('/images/home/choose-bg3.jpg')] w-full bg-cover bg-bottom">
      <div class="container px-6 mx-auto md:flex items-center sm:py-24 py-10">
        <div class="md:w-1/3">
          <img data-src="/images/home/about.jpg" alt="ARI" class="lazy w-full rounded-tr-[120px]" />
        </div>
        <div class="md:w-2/3 md:pl-12 text-gray-500 pt-10 md:pt-0">
          <p class="text-blue-500 uppercase font-bold mb-4">{{ language.page.ABOUT }}</p>
          <h2 class="text-4xl text-blue-900 font-bold  mb-8">
            {{ language.page.ARIIs }} <br />
            {{ language.page.BestTechnicalAgency }}
          </h2>
          <p class="border-l-4 border-blue-500 pl-4 mb-4">{{ language.page.About1 }}</p>
          <p class="border-l-4 border-blue-500 pl-4 mb-4">{{ language.page.About2 }}</p>
          <p class="border-l-4 border-blue-500 pl-4">{{ language.page.aAbout3 }}</p>
        </div>
      </div>
    </section>
    <!-- end about  -->

    <section
      class="bg-[url('/images/home/ser-bg3.jpg')] w-full bg-cover bg-center bg-gray-100 bg-blend-multiply">
      <div class="max-w-screen-2xl px-6 mx-auto sm:py-24 py-10">
        <p class="text-blue-500 uppercase font-bold text-center mb-4">{{ language.page.OurMission }}</p>
        <h2 class="text-4xl text-blue-900 font-bold text-center">{{ language.page.WeProvide }}</h2>
        <div class="grid sm:grid-cols-2 xl:grid-cols-4 gap-10 mt-14">

        {{#each mission}}
          <div
            class="drop-shadow bg-white rounded-xl p-5 hover:scale-110 duration-500 transition-all ease-in-out text-center xl:text-left">
            <img alt="{{translation.name}}" class="lazy h-20 mb-5 mx-auto entered loaded" data-src="{{image}}">
            <h3 class="text-xl text-blue-500 font-bold mb-1">{{translation.name}}</h3>
            <p class="text-sm">{{translation.description}}</p>
          </div>
        {{/each}}

        </div>
      </div>
    </section>
    <!-- services -->

    <section id="services" class="bg-[url('/images/home/team-bg3.jpg')] w-full bg-cover bg-center">
      <div class="container px-6 mx-auto sm:py-24 py-10">
        <p class="text-blue-500 uppercase font-bold text-center mb-4">{{ language.page.Services }}</p>
        <h2 class="text-4xl text-blue-900 font-bold text-center mb-4">{{ language.page.ARightChoice }}</h2>
        <p class="text-gray-500 text-center">{{ language.page.ARINotStrives }}</p>
        <div class="swiper mySwiper mt-14 pb-8">
          <div class="swiper-wrapper">

          {{#each services}}
            <div class="swiper-slide lg:flex items-center ">
              <img alt="{{translation.name}}" class="lazy lg:w-1/2 lg:pr-14 h-80" data-src="{{image}}" src="/images/lazyload.png">
              <div class="lg:w-1/2 mt-5 lg:mt-0">
                <h3 class="text-2xl text-blue-500 font-bold mb-1 gsap top">{{translation.name}}</h3>
                <p class="gsap bottom">{{translation.description}}</p>
              </div>
            </div>
          {{/each}}
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </section>
    <!-- end services  -->
    <section
      class="bg-[url('/images/home/blog-bg3.jpg')] w-full bg-cover bg-center bg-gray-100 bg-blend-multiply">
      <div class="container px-6 mx-auto sm:py-24 py-10">
        <p class="text-blue-500 uppercase font-bold text-center">{{ language.page.CoreValue }}</p>
        <div class='grid sm:grid-cols-2 xl:grid-cols-4 gap-10 mt-14'>

        {{#each value}}
          <div
            class="drop-shadow bg-white rounded-xl p-5 hover:scale-110 duration-500 transition-all ease-in-out text-center xl:text-left">
            <img alt="{{translation.name}}" class="lazy h-20 mb-5 mx-auto" data-src="{{image}}" />
            <h3 class="text-xl text-blue-500 font-bold mb-1">{{translation.name}}</h3>
            <p class="text-sm">{{translation.description}}</p>
          </div>
        {{/each}}

        </div>
      </div>
    </section>

    <section class="bg-[url('/images/home/choose-bg3.jpg')] w-full bg-cover bg-center">
      <div class="container px-6 mx-auto sm:py-24 py-10">
        <p class="text-blue-500 uppercase font-bold text-center mb-4">{{ language.page.ExecutiveBoard }}</p>
        <h2 class="text-3xl text-blue-900 text-center">{{ language.page.WeLove }}</h2>
        <div class="swiper mySwiper mt-14 pb-10">
          <div class="swiper-wrapper">

          {{#each JSON.member}}
            <div
              class="swiper-slide border border-gray-200 text-left p-5 lg:p-10 lg:pb-0 sm:pt-5 sm:pr-3 sm:pl-0 bg-gray-50 container">
              <div class="sm:flex items-center">
                <div class='sm:w-1/3'>
                  <img alt="{{translation.name}}" class="lazy w-full sm:p-10 lg:pt-0 text-center mx-auto"
                       data-src="{{image}}"  src="/images/lazyload.png" />
                </div>
                <div class="sm:w-2/3 mt-5 sm:mt-0">
                  <h3 class="font-bold text-3xl sm:text-4xl text-blue-900 mb-1 gsap top">{{translation.name}}</h3>
                  <div class='gsap right'>
                    <p class="text-blue-500 text-lg mb-0 capitalize font-bold ">
                      {{translation.position}}
                    </p>
                    <div class="w-52 h-0.5 bg-gray-300 mb-5 sm:mx-0"></div>
                  </div>
                  <div class='gsap bottom'>
                    <p class="hidden text-justify sm:block">
                      {{translation.description}}
                    </p>
                    <button class='handle-dialog text-blue-500 hover:text-blue-600 sm:mt-3' tabIndex={-1} data-id="{{id}}">
                        {{ SeeMore }}
                      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg"
                           xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="384px" height="384px"
                           viewBox="0 0 384 384" enable-background="new 0 0 384 384" xml:space="preserve"
                           class="h-5 w-4 inline-block fill-blue-600">
                    <path
                      d="M251,192.2c-4.7-4.5-8.7-8.4-12.7-12.4C196,137.5,153.7,95.3,111.6,53c-2.1-2.2-3.9-5.3-4.5-8.3c-1-4.8,1.6-9,5.8-11.1c4.5-2.2,8.7-1.7,12.6,1.3c1,0.8,1.8,1.7,2.7,2.6c47.8,47.8,95.6,95.6,143.5,143.4c7.3,7.3,7.3,14.8,0,22.2C223.8,251,175.8,298.9,128,346.8c-3.6,3.6-7.4,6-12.6,4.5c-7.9-2.2-11.1-11.4-6.1-17.9c0.9-1.2,2-2.2,3.1-3.3c45.1-45.1,90.1-90.1,135.2-135.2C248.5,194.1,249.5,193.4,251,192.2z" />
                  </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}

          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
      <template id="template">
        {{{{raw-helper}}}}
          <div class="text-center pb-5">
            <img alt="{{translation.name}}" class="h-32 mx-auto" src="{{image}}" />
            <h3 class="text-xl text-blue-800 font-bold mb-1">{{translation.name}}</h3>
            <p class="text-blue-500 text mb-0 capitalize">{{translation.position}}</p>
          </div>
          <div class="html-render text-sm">{{{translation.content}}}</div>
        {{{{/raw-helper}}}}
      </template>
    </section>
    <!-- handlebars 4 -->
    <script src="https://cdn.jsdelivr.net/npm/handlebars@4/dist/handlebars.js"></script>

    <script>
      window._DATA_ ={{{json JSON}}}
      Array.from(document.getElementsByClassName('handle-dialog')).forEach((el) => el.addEventListener('click', (e) =>  {
        const temp = document.getElementById("template");
        if (temp) {
          m.html(Handlebars.compile(temp.innerHTML)(window._DATA_.member.filter((item) => item.id === e.target.dataset['id'])[0]));
        }

      }))
    </script>
  {{/inline}}
{{/client}}
